<?xml version="1.0" encoding="UTF-8"?>
<window type="buttonmenu" id="111">
  <defaultcontrol always="true">9001</defaultcontrol>
  <include>OpenClose</include>
  <coordinates>
    <system>1</system>
    <posx>0</posx>
    <posy>0</posy>
  </coordinates>
  <controls>
    <include>DimBG</include>
    <control type="group">
      <include>DialogOpenClose</include>
	  <posx>60</posx>
	  <posy>20</posy>
	  <control type="image">
        <posx>480</posx>
        <posy>225</posy>
        <width>750</width>
        <height>400</height>
        <texture border="210,50,50,50">dialogs/DialogSelect.png</texture>
      </control>
	  <control type="group">
        <posx>462</posx>
        <posy>186</posy>
        <control type="panel" id="9001" description="PW Options">
          <posx>255</posx>
          <posy>90</posy>
          <width>500</width>
          <height>300</height>
          <onleft>close</onleft>
          <onright>close</onright>
          <onup>9001</onup>
          <ondown>9001</ondown>
          <scrolltime tween="sine" easing="inout">280</scrolltime>
          <itemlayout height="60" width="500">
            <control type="label">
              <posx>20</posx>
              <posy>0</posy>
              <width>460</width>
              <height>60</height>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </itemlayout>
          <focusedlayout height="60" width="500">
            <control type="image">
              <posx>0</posx>
              <posy>0</posy>
              <width>525</width>
              <height>60</height>
              <texture border="2">common/ButtonFO.png</texture>
            </control>
            <control type="label">
              <posx>20</posx>
              <posy>0</posy>
              <width>460</width>
              <height>60</height>
              <textcolor>White</textcolor>
              <label>$INFO[ListItem.Label]</label>
            </control>
          </focusedlayout>
          <content>
            <item id="8" description="LogOff">
              <visible>System.HasLoginScreen | IntegerGreaterThan(System.ProfileCount,1)</visible>
              <visible>System.Loggedon</visible>
              <onclick>dialog.close(all,true)</onclick>
              <onclick>System.LogOff</onclick>
              <label>$LOCALIZE[20126]</label>
              <icon>BMProfile.png</icon>
            </item>
            <item id="9" description="Master mode">
              <visible>System.HasLocks + System.IsMaster</visible>
              <onclick>xbmc.mastermode</onclick>
              <label>$LOCALIZE[20046]</label>
              <icon>BMMaster.png</icon>
            </item>
            <item id="9" description="Master mode">
              <visible>System.HasLocks + !System.IsMaster</visible>
              <onclick>xbmc.mastermode</onclick>
              <label>$LOCALIZE[20045]</label>
              <icon>BMNoMaster.png</icon>
            </item>
            <item id="11" description="Quit">
              <onclick>XBMC.Quit()</onclick>
              <label>$LOCALIZE[13009]</label>
              <thumb>BMQuit.png</thumb>
            </item>
            <item id="12" description="Suspend">
              <visible>System.CanSuspend</visible>
              <onclick>XBMC.Suspend()</onclick>
              <label>$LOCALIZE[13011]</label>
              <icon>BMSleep.png</icon>
            </item>
            <item id="15" description="Shutdown">
              <visible>System.CanPowerDown</visible>
              <onclick>XBMC.Powerdown()</onclick>
              <label>13005</label>
              <thumb>BMShutdown.png</thumb>
            </item>
            <item id="14" description="Reboot">
              <visible>System.CanReboot</visible>
              <onclick>XBMC.Reset()</onclick>
              <label>$LOCALIZE[13013]</label>
              <thumb>BMRestart.png</thumb>
            </item>
          </content>

        </control>

      </control>
	  <control type="image">
        <posx>552</posx>
        <posy>360</posy>
        <width>128</width>
        <height>128</height>
        <info>Container(9001).ListItem.Icon</info>
      </control>
    </control>
  </controls>
</window>
